@page
@model ActividadesSugeridasRazorPages.Pages.ActividadesSugeridas.CreateModel

@{
    ViewData["Title"] = "Create";
}



<h4>Crear Nueva Actividad Sugerida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ActividadSugerida.Tema" class="control-label">Tema</label>
                <input asp-for="ActividadSugerida.Tema" class="form-control" />
                <span asp-validation-for="ActividadSugerida.Tema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActividadSugerida.DesActividad" class="control-label">Descripción</label>
                <input asp-for="ActividadSugerida.DesActividad" class="form-control" />
                <span asp-validation-for="ActividadSugerida.DesActividad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActividadSugerida.IdTipoActividadSugerida" class="control-label">Tipo Actividad</label>
                <select asp-for="ActividadSugerida.IdTipoActividadSugerida" class ="form-control" asp-items="ViewBag.IdTipoActividadSugerida"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info btn-md active" role="button" asp-page="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
